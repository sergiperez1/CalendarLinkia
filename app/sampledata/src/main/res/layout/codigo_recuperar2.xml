<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_codigo_recuperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Introduzca su código de recuperación:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText android:layout_height="24dp" android:layout_width="226dp" app:layout_constraintEnd_toEndOf="parent" android:gravity="center_horizontal" android:layout_marginEnd="32dp" android:layout_marginTop="12dp" android:id="@+id/et_codigo_recuperacion" app:layout_constraintTop_toBottomOf="@+id/tv_codigo_recuperacion" android:textColor="@color/black" android:maxLength="5" android:inputType="text" android:hint="Código de recuperación" android:ems="10" android:background="@color/white"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:text="Validar código" android:layout_marginEnd="4dp" android:layout_marginTop="52dp" android:id="@+id/btn_codigoRecuperacion" app:layout_constraintTop_toBottomOf="@+id/et_codigo_recuperacion" android:textColor="@color/black" android:backgroundTint="@color/white"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Cancelar" android:layout_marginTop="52dp" android:id="@+id/btn_cancelar" app:layout_constraintTop_toBottomOf="@+id/et_codigo_recuperacion" android:textColor="@color/black" android:backgroundTint="@color/white" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>

    <TextView android:layout_height="40dp" android:layout_width="159dp" android:textSize="14sp" android:id="@+id/tv_textoErrorCodigoVerificar" app:layout_constraintTop_toBottomOf="@+id/et_codigo_recuperacion" android:textColor="#FF0000" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="191dp" android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>