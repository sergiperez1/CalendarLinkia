<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonaranja">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="115dp"
        android:text="Añadir miembros"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_volver_annadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_usuarios_buscados" />

    <Button
        android:id="@+id/btn_annadir_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="24dp"
        android:text="Añadir"
        app:layout_constraintStart_toEndOf="@+id/btn_volver_annadir"
        app:layout_constraintTop_toBottomOf="@+id/lv_usuarios_buscados" />

    <ListView
        android:id="@+id/lv_usuarios_buscados"
        android:layout_width="334dp"
        android:layout_height="159dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="27dp"
        android:background="#30ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="334dp"
        android:layout_height="53dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageButton
            android:id="@+id/ibBuscarEmpleado"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_search_24" />

        <EditText
            android:id="@+id/etBuscador"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:background="#30ffffff"
            android:drawablePadding="17dp"
            android:ems="10"
            android:hint="Buscar"
            android:inputType="textPersonName"
            android:padding="17dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>