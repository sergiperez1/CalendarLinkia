<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rosaazul">

        <TextView
            android:id="@+id/tv_dpsDer_eventoAbierto"
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="Evento "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="60dp"
            android:text="Eventos"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/lv_eventos_despl_derecho"
            android:layout_width="280dp"
            android:layout_height="351dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="70dp"
            android:background="#30ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_filtrar" />

        <Spinner
            android:id="@+id/spn_eventos_grupo"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="70dp"
            android:background="#30ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_dpsDer_grp"
            app:layout_constraintTop_toBottomOf="@+id/spn_dpsDer_eventoAbierto" />

        <Spinner
            android:id="@+id/spn_dpsDer_eventoAbierto"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="70dp"
            android:background="#30ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_dpsDer_eventoAbierto"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spn_eventos_encuestas"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="70dp"
            android:background="#30ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_dpsDer_conf"
            app:layout_constraintTop_toBottomOf="@+id/spn_eventos_grupo" />

        <TextView
            android:id="@+id/tv_dpsDer_grp"
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="Grupos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dpsDer_eventoAbierto" />

        <TextView
            android:id="@+id/tv_dpsDer_conf"
            android:layout_width="86dp"
            android:layout_height="35dp"
            android:layout_marginStart="36dp"

            android:layout_marginTop="16dp"
            android:text="Estado Evento:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dpsDer_grp" />

        <ImageButton
            android:id="@+id/ib_plegar_despl_derecho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/plegar_desplegable_derech"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_filtrar"
            android:layout_width="158dp"
            android:layout_height="43dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="70dp"
            android:text="Filtrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spn_eventos_encuestas" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>